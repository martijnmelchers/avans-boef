@model (Models.Booking booking, Models.Form.ContactInfo contactInfo)

@{
    ViewBag.Title = "Contactinformatie";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-9">
        <div class="card">
            <div class="card-header">
                <h4>Contactgegevens</h4>
            </div>
            @using (Html.BeginForm("AddDetailsAndCalculatePrice", "Booking", FormMethod.Post))
            {
                <div class="card-body">
                    @Html.ValidationSummary(true, "Er ging iets niet goed!", new { @class = "alert alert-danger no-list" })
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label asp-for="contactInfo.Name">Naam</label>
                                <input asp-for="contactInfo.Name" name="contactInfo.Name" class="form-control" required/>
                            </div>

                            <div class="form-group">
                                <label asp-for="contactInfo.Address">Adres</label>
                                <input asp-for="contactInfo.Address" name="contactInfo.Address" class="form-control" required/>
                            </div>


                            <div class="form-group">
                                <label asp-for="contactInfo.PhoneNumber">Telefoonnummer</label>
                                <input asp-for="contactInfo.Address" name="contactInfo.PhoneNumber" class="form-control"/>
                            </div>
                        </div>
                    </div>
                    <p>
                        <b>Let op!</b>
                        Als je verder gaat kun je je geen beestjes of accessoires meer toevoegen... Controleer dus alles goed!
                    </p>
                </div>
                <div class="card-footer text-right">
                    <input type="submit" value="Opslaan" class="btn btn-success"/>
                </div>
            }
        </div>
    </div>
    <div class="col-lg-3">
        <partial name="_BookingDetails" model="Model.booking"/>
    </div>
</div>
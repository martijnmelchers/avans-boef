@model (Models.Booking booking, Models.Form.Register register, Models.Form.Login login)

@{
    ViewBag.Title = "Inloggen of Registeren";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-9">
        <h2>Inloggen of registreren</h2>
        @Html.ValidationSummary(true, "Er ging iets niet goed!", new { @class = "alert alert-danger no-list" })

        <div class="row">
            <div class="col-lg-6">
                @using (Html.BeginForm("Login", "Booking", FormMethod.Post))
                {
                    <div class="form-group">
                        <label asp-for="login.Email"></label>
                        <input asp-for="login.Email" name="login.Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="login.Password"></label>
                        <input asp-for="login.Password" name="login.Password" class="form-control" />
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Inloggen</button>

                }
            </div>
            <div class="col-lg-6">
                @using (Html.BeginForm("Register", "Booking", FormMethod.Post))
                {
                    <div class="form-group">
                        <label asp-for="register.Email">Email</label>
                        <input asp-for="register.Email" name="register.Email" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="register.Password">Wachtwoord</label>
                        <input asp-for="register.Password" name="register.Password" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="register.PasswordRepeat">Herhaal wachtwoord</label>
                        <input asp-for="register.PasswordRepeat" name="register.PasswordRepeat" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="register.PasswordRepeat">Ben je admin?</label>
                        <input asp-for="register.IsAdmin" name="register.IsAdmin" />
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Registreren</button>
                }
            </div>
        </div>


    </div>
    <div class="col-lg-3">
        <partial name="_BookingDetails" model="Model.booking"/>
    </div>
</div>

@model Models.Beestje
@{
    ViewData["Title"] = "AddAccessoires";
}

<h1>AddAccessoires</h1>


<div class="container">
    @using (Html.BeginForm("AddAccessoires", "Beestjes", FormMethod.Post))
    {
        foreach (var item in ViewBag.Accessoires)
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox"
                           name="Accessoires"
                           value="@item.Id"
                           @if(Model.Accessoires.Contains(item))
                           {
                               <text> checked </text> 
                           } 
                    /> @item.Name
                </label>
            </div>
        }
        <div class="form-group text-center">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>

        <a asp-action="Edit" asp-route-id="@Model.Id">Terug naar bewerken</a>
    }
</div>

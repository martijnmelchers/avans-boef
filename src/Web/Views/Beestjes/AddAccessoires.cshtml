@model Models.Beestje
@{
    ViewData["Title"] = "AddAccessoires";
}

<h1>AddAccessoires</h1>


<div class="container">
    @using (Html.BeginForm("AddAccessoires", "Beestjes", FormMethod.Post))
    {
        foreach (var item in ViewBag.Accessoires)
        {
            <div class="checkbox">
                <label>
                    <input class="form-check-input" type="checkbox" name="Accessoires" value="@item.Id" @(Model.BeestjeAccessoires.Select(x => x.AccessoireId).ToList().Contains(item.Id) ? "checked" : "")>
                    @item.Name
                </label>
            </div>
        }
        <div class="form-group text-center">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>

        <a asp-action="Edit" asp-route-id="@Model.Id">Terug naar bewerken </a>
    }
</div>

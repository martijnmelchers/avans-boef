@model Models.Accessoire

@{
    ViewData["Title"] = "Accessoire maken";
}

<h1>Nieuw accessoire aanmaken</h1>

<h4>Accessoire</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Nieuwe accessoire maken
            </div>
            <form asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Naam</label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label">Prijs</label>
                        <input asp-for="Price" class="form-control"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-lg-6 text-left align-content-center">
                            <a asp-action="Index">Terug naar lijst</a>
                        </div>
                        <div class="col-lg-6 text-right">
                            <input type="submit" value="Aanmaken" class="btn btn-success"/>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
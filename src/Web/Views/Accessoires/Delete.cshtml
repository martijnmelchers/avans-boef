@model Models.Accessoire

@{
    ViewData["Title"] = "Accessoire verwijderen";
}

<h1>Accessoire verwijderen</h1>


<h3>Weet je zeker dat je dit wilt verwijderen?</h3>
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Accessoire verwijderen
            </div>
            <div class="card-body">
                <div class = "form-group">
                    <b>@Html.DisplayNameFor(model => model.Name)</b>
                    @Html.DisplayFor(model => model.Name)
                </div>
   
                <div class="form-group">
                    <b>@Html.DisplayNameFor(model => model.Price)</b>
                    @Html.DisplayFor(model => model.Price)
                </div>
            </div>

            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
                    <a asp-action="Index">Terug naar lijst</a>
                </form>
            </div>
        </div>
    </div>
</div>
